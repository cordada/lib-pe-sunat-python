# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
# indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.css]
indent_style = space
indent_size = 2

[*.{html,htm}]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[{*.mk,Makefile}]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab

[*.sql]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.{yaml,yaml.*,yml,yml.*}]
indent_style = space
indent_size = 2

[.flake8]
indent_style = space
indent_size = 2

[.isort.cfg]
indent_style = space
indent_size = 2

[setup.cfg]
indent_style = space
indent_size = 2
